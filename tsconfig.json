{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "dom.iterable"],
        "outDir": "./dist/server",
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["server/**/*", "frontend/**/*"]
}
